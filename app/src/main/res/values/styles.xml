<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_light_blue_500</item>
        <item name="colorPrimaryDark">@color/material_light_blue_700</item>
        <item name="colorAccent">@color/material_yellow_a200</item>
    </style>

    <style name="AppTheme.AbStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/AppTheme.TitleTextStyle</item>
    </style>

    <style name="AppTheme.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>