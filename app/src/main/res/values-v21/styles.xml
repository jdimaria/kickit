<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Material Compatibility -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/material_light_blue_500</item>
        <item name="android:colorPrimaryDark">@color/material_light_blue_700</item>
        <item name="android:colorAccent">@color/material_yellow_a200</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.AbStyle" parent="android:style/Widget.Material.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.TitleTextStyle</item>
    </style>

    <style name="AppTheme.TitleTextStyle" parent="android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>